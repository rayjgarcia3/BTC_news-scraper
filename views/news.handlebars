<div class="boombox">
  <div class="row center">
     <br><br>
     <h1 class="white-text">Latest and greatest crypto-news!</h1>
     <a href="/scrape" id="news-btn" class="btn-flat">Refresh News</a>
  </div>
</div>
<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s7">
        <ul id="reports" class="collection">
          {{#each reports}}
            <div class="collection-item row" id="highlight">
              <div class="col s2">
                <br>
                <form method="POST" action="/news/save/{{this.id}}?_method=PUT">
                  <button class="btn-floating btn-small waves-effect waves-light orange darken-4" title="Save Report" value="{{this}}" type="submit"><i class="material-icons">add</i></button>
                </form>
              </div>
              <div class="col s8">
                <li>{{this.title}}<br /><a href="{{this.link}}">Read more</a></li>
              </div>
            </div>
          {{/each}}
        </ul>
      </div>
      <div id="price-card" class="col hide-on-small-only l4">
        <div class="card">
          <div class="card-image">
            <iframe src="//giphy.com/embed/GMIbzgzyS4pws" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
            <p class="card-title">To the moon!!!</p>
          </div>
          <div class="card-content">
            <p>BTC - USD:<span id="btcPrice">{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
