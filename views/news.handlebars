<div class="boombox">
  <div class="row center">
     <br><br>

     <h1 class="white-text">Latest and greatest crypto-news!</h1>
  </div>
</div>
<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s10">
        <ul id="reports" class="collection">
          {{#each reports}}
            <div class="collection-item row">
              <div class="col s2">
                <br>
                <form method="POST" action="/news/save">
                  <button class="btn-floating btn-small waves-effect waves-light orange darken-4" title="Save Report" value="{{this.id}}" type="submit"><i class="material-icons">add</i></button>
                </form>
              </div>
              <div class="col s8">
                <li>{{this.title}}<br /><a href="{{this.link}}">Read more</a></li>
              </div>
              <div class="col s1 pull-s1">
                  <a href=/news/comment/{{this.id}} class="btn-flat blue darken-4 white-text">Comment</a>
              </div>
            </div>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
